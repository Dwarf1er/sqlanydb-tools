{
	"name": "sqlanydb-tools-vscode",
	"displayName": "sqlanydb-tools-vscode",
	"description": "Manage SAP SQL Anwyhere 17 Databases from VSCode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.93.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"types": "./dist/extension.d.ts",
	"contributes": {
		"commands": [
			{
				"command": "sqlanydb-tools-vscode.startDatabase",
				"title": "Start Database"
			},
			{
				"command": "sqlanydb-tools-vscode.stopDatabase",
				"title": "Stop Database"
			},
			{
				"command": "sqlanydb-tools-vscode.resetDatabase",
				"title": "Reset Database"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "sqlanydb-tools",
					"title": "SAP SQL Anywhere 17 Tools",
					"icon": "resources/sqlanydb-tools.svg"
				}
			]
		},
		"views": {
			"sqlanydb-tools": [
				{
					"id": "sqlanydb-manager",
					"name": "Database Manager",
					"type": "tree"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "SAP SQL Anywhere 17 Tools",
			"properties": {
				"sqlanydb-tools-vscode.databases": {
					"type": "array",
					"default": [
						{
							"name": "TestDatabase1",
							"path": "/path/to/test/database1",
							"archivePath": "/path/to/archive/database1.zip",
							"serverPort": "1234",
							"httpPort": "8080",
							"cacheSize": "256M"
						}
					],
					"description": "List of database configurations",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string",
								"description": "The name of the database file, without the .db extension"
							},
							"path": {
								"type": "string",
								"description": "The path to the database .db file"
							},
							"archivePath": {
								"type": "string",
								"description": "The path to the .zip archive file"
							},
							"serverPort": {
								"type": "string",
								"description": "The server port for the database"
							},
							"httpPort": {
								"type": "string",
								"description": "The HTTP port for the database"
							},
							"cacheSize": {
								"type": "string",
								"description": "The cache size for the database"
							}
						},
						"required": [
							"name",
							"path"
						]
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test",
		"build": "tsc"
	},
	"dependencies": {
		"@sqlanydb-tools/sqlanydb-config": "*",
		"@sqlanydb-tools/sqlanydb-manager": "*"
	},
	"devDependencies": {
		"@types/vscode": "^1.93.0",
		"@types/mocha": "^10.0.7",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^8.3.0",
		"@typescript-eslint/parser": "^8.3.0",
		"eslint": "^9.9.1",
		"typescript": "^5.5.4",
		"ts-loader": "^9.5.1",
		"webpack": "^5.94.0",
		"webpack-cli": "^5.1.4",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1"
	}
}
