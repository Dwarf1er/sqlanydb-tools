{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"lib": ["ES2022"],
		"sourceMap": true,
		"rootDir": "../../",
		"outDir": "dist",
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true
	},
	"include": [
		"../../apps/**/*",
		"../../packages/**/*"
	],
	"exclude": ["node_modules", "dist"]
}
