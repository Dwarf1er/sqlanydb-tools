{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"lib": ["ES2022"],
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
